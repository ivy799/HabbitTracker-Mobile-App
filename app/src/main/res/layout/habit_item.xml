<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <!-- Nama Habit -->
    <TextView
        android:id="@+id/tvHabitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Habit Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Deskripsi Habit -->
    <TextView
        android:id="@+id/tvHabitDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Habit Description"
        android:textSize="14sp"
        android:textColor="#444444"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvHabitName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>

    <!-- Kategori -->
    <TextView
        android:id="@+id/tvHabitCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvHabitDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Frekuensi -->
    <TextView
        android:id="@+id/tvHabitFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvHabitDescription"
        app:layout_constraintStart_toEndOf="@id/tvHabitCategory"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"/>

    <!-- Tanggal Mulai -->
    <TextView
        android:id="@+id/tvHabitStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvHabitCategory"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Target Count -->
    <TextView
        android:id="@+id/tvHabitTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target: 10"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvHabitStartDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Current Count -->
    <TextView
        android:id="@+id/tvHabitCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current: 3"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvHabitStartDate"
        app:layout_constraintStart_toEndOf="@id/tvHabitTarget"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"/>

    <!-- Status Aktif -->
    <TextView
        android:id="@+id/tvHabitStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        app:layout_constraintTop_toBottomOf="@id/tvHabitCurrent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/layoutHabitButtons"/>

    <!-- Layout Horizontal untuk Tombol-tombol -->
    <LinearLayout
        android:id="@+id/layoutHabitButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnFinishHabit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Selesai"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:backgroundTint="#388E3C"
            android:drawablePadding="6dp"
            android:layout_marginEnd="6dp"/>

        <Button
            android:id="@+id/btnSkipHabit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:backgroundTint="#FF9800"
            android:drawablePadding="6dp"
            android:layout_marginEnd="6dp"/>

        <Button
            android:id="@+id/btnDeactivateHabit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Nonaktifkan"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:backgroundTint="#BDBDBD"
            android:drawablePadding="6dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>