<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Panel dengan warna latar belakang -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/habit_header_gradient"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nama Habit dengan ikon -->
        <TextView
            android:id="@+id/tvHabitName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Habit Name"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Badge Status (Active/Inactive) -->
        <TextView
            android:id="@+id/tvHabitStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/habit_status_badge"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Active"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvHabitName"
            app:layout_constraintTop_toBottomOf="@id/tvHabitName" />

        <!-- Content Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/headerBackground">

            <!-- Deskripsi Habit -->
            <TextView
                android:id="@+id/tvHabitDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:text="Habit Description that explains the purpose and benefits of the habit in your daily routine."
                android:textColor="#424242"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Progress Section -->
            <LinearLayout
                android:id="@+id/progressSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tvHabitDescription">

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progressDrawable="@drawable/habit_progress_bar"
                    android:max="100"
                    android:progress="30" />

                <!-- Progress Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHabitCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="3"
                        android:textColor="#4CAF50"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text=" / "
                        android:textColor="#757575"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvHabitTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="10"
                        android:textColor="#757575"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="sans-serif"
                        android:text="days completed"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Info Section -->
            <LinearLayout
                android:id="@+id/infoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/habit_info_background"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/progressSection">

                <!-- Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Category"
                        android:textColor="#616161"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvHabitCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Health"
                        android:textColor="#212121"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Frequency -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Frequency"
                        android:textColor="#616161"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvHabitFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Daily"
                        android:textColor="#212121"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Start Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Start Date"
                        android:textColor="#616161"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvHabitStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="01 Jun 2025"
                        android:textColor="#212121"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Buttons Layout -->
        <LinearLayout
            android:id="@+id/layoutHabitButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentLayout">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinishHabit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="10dp"
                android:text="Complete"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkipHabit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="10dp"
                android:text="Skip"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeactivateHabit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="10dp"
                android:text="Disable"
                android:textAllCaps="false"
                android:textColor="#616161"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#616161" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>